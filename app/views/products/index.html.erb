<h1>Listing product</h1>
<%= link_to 'New product', new_product_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>

  <% @products.each do |prod| %>
    <tr>
      <td><%= prod.title %></td>
      <td><%= prod.description %></td>
      <td><%= link_to 'Show', product_path(prod) %></td>
      <td><%= link_to 'Edit', edit_product_path(prod) %></td>
      <td><%= link_to 'Destroy', product_path(product),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
